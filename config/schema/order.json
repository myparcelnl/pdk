{
  "description": "/order",
  "type": "object",
  "additionalItems": false,
  "required": ["physicalProperties", "shippingAddress", "deliveryOptions"],
  "properties": {
    "physicalProperties": {
      "properties": {
        "weight": {
          "type": ["integer"]
        }
      }
    },
    "shippingAddress": {
      "type": "object",
      "required": ["cc"],
      "properties": {
        "cc": {
          "type": "string",
          "pattern": "^[A-z]{2}$"
        }
      }
    },
    "deliveryOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "carrier": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "subscriptionId": {
              "type": ["string", "null"]
            }
          }
        },
        "date": {
          "type": ["string", "null"],
          "pattern": "^(20\\d\\d)-(0[1-9]|1[012])-(0[1-9]|[12]\\d|3[01]) ([01]\\d|2[0123]):([012345]\\d):([012345]\\d)$"
        },
        "deliveryType": {
          "enum": ["morning", "standard", "evening", "pickup"]
        },
        "labelAmount": {
          "type": ["integer", "null"],
          "minimum": 1
        },
        "packageType": {
          "enum": ["package", "mailbox", "digital_stamp", "letter"]
        },
        "pickupLocation": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["city", "locationName", "postalCode", "street"],
          "properties": {
            "postalCode": {
              "type": "string"
            },
            "locationName": {
              "type": "string"
            },
            "city": {
              "type": ["null", "string"]
            },
            "street": {
              "type": "string"
            },
            "streetAdditionalInfo": {
              "type": ["null", "string"]
            },
            "number": {
              "type": "string"
            },
            "numberSuffix": {
              "type": ["null", "string"]
            },
            "boxNumber": {
              "type": ["null", "string"],
              "maxLength": 8
            },
            "region": {
              "type": ["null", "string"],
              "maxLength": 35
            },
            "state": {
              "type": ["null", "string"]
            },
            "cc": {
              "type": "string",
              "pattern": "^[A-z]{2}$"
            },
            "locationCode": {
              "type": ["null", "string"],
              "minLength": 1
            },
            "retailNetworkId": {
              "type": ["null", "string"]
            }
          }
        },
        "shipmentOptions": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ageCheck": {
              "enum": [0, 1]
            },
            "hideSender": {
              "enum": [0, 1]
            },
            "insurance": {
              "type": ["integer"]
            },
            "labelDescription": {
              "oneOf": [
                {
                  "type": ["string", "null"]
                },
                {
                  "enum": [-1]
                }
              ]
            },
            "largeFormat": {
              "enum": [0, 1]
            },
            "onlyRecipient": {
              "enum": [0, 1]
            },
            "return": {
              "enum": [0, 1]
            },
            "sameDayDelivery": {
              "enum": [0, 1]
            },
            "signature": {
              "enum": [0, 1]
            }
          }
        }
      }
    }
  }
}
