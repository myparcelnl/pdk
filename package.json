{
    "name": "@myparcel/php-pdk",
    "private": true,
    "license": "MIT",
    "scripts": {
        "docker": "docker compose run --rm php",
        "prepare": "is-ci || husky install",
        "quality": "yarn docker composer quality",
        "quality:fix": "yarn docker composer quality:fix",
        "test": "yarn docker composer test",
        "test:coverage": "yarn docker composer test:coverage",
        "test:watch": "npx -q nodemon --exec 'docker compose exec -T php vendor/bin/pest || exit 1' --watch 'src,tests' --ext 'php'"
    },
    "lint-staged": {
        "*.{md}": "prettier --write",
        "*.php,__1": "yarn quality:fix && yarn test"
    },
    "prettier": "@myparcel/prettier-config",
    "release": {
        "extends": "@myparcel/semantic-release-config/github-composer"
    },
    "devDependencies": {
        "@myparcel/prettier-config": "^1.1.0",
        "@myparcel/semantic-release-config": "^4.2.3",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "lint-staged": "^13.1.1",
        "prettier": "^2.8.4"
    },
    "packageManager": "yarn@3.6.0",
    "volta": {
        "node": "18.17.0"
    }
}
