{
    "id": "label",
    "title": "settings_view_label_title",
    "titleSuffix": null,
    "description": "settings_view_label_description",
    "elements": [
        {
            "name": "description",
            "$component": "TextInput",
            "label": "settings_label_description",
            "description": "settings_label_description_description"
        },
        {
            "name": "prompt",
            "$component": "ToggleInput",
            "label": "settings_label_prompt",
            "description": "settings_label_prompt_description"
        },
        {
            "$component": "SettingsDivider",
            "$wrapper": false,
            "content": "settings_label_defaults_description",
            "heading": "settings_label_defaults_title",
            "level": 2
        },
        {
            "name": "output",
            "$component": "RadioGroup",
            "options": [
                {
                    "value": "open",
                    "label": "settings_print_output_option_open"
                },
                {
                    "value": "download",
                    "label": "settings_print_output_option_download"
                }
            ],
            "label": "settings_label_output",
            "description": "settings_label_output_description"
        },
        {
            "name": "format",
            "$component": "RadioGroup",
            "options": [
                {
                    "value": "a4",
                    "label": "settings_print_format_option_a4"
                },
                {
                    "value": "a6",
                    "label": "settings_print_format_option_a6"
                }
            ],
            "label": "settings_label_format",
            "description": "settings_label_format_description"
        },
        {
            "name": "position",
            "$builders": [
                {
                    "$visibleWhen": {
                        "$if": [
                            {
                                "$target": "format",
                                "$eq": "a4"
                            }
                        ]
                    }
                }
            ],
            "$component": "MultiSelectInput",
            "options": [
                {
                    "value": 1,
                    "label": "settings_print_position_option_1"
                },
                {
                    "value": 2,
                    "label": "settings_print_position_option_2"
                },
                {
                    "value": 3,
                    "label": "settings_print_position_option_3"
                },
                {
                    "value": 4,
                    "label": "settings_print_position_option_4"
                }
            ],
            "label": "settings_label_position",
            "description": "settings_label_position_description"
        }
    ],
    "children": null
}
